<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_feedback_area"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="4"
              android:orientation="horizontal">


    <FrameLayout
        android:id="@+id/layout_nestedFragment_feedback_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#4169e1">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_nestedFragment_tablet"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#a169e1">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_nestedFragment_avatar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#476931">
    </FrameLayout>
</LinearLayout>
